<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BEA5EA"
        tools:context=".Signup_user">


        <TextView
            android:id="@+id/txt"
            android:layout_width="216dp"
            android:layout_height="65dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/alfa_slab_one"
            android:text="Signup as"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/nametxt"
            android:layout_width="410dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_name"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/supdttxt" />

        <EditText
            android:id="@+id/usernametxt"
            android:layout_width="410dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_user"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailtxt" />

        <EditText
            android:id="@+id/phntxt"
            android:layout_width="410dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_phone"
            android:ems="10"
            android:hint="Phone Number"
            android:inputType="phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nametxt" />

        <EditText
            android:id="@+id/emailtxt"
            android:layout_width="410dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_email"
            android:ems="10"
            android:hint="E-Mail"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phntxt" />

        <EditText
            android:id="@+id/pwdtxt"
            android:layout_width="410dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_pass"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.478"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usernametxt" />


        <EditText
            android:id="@+id/sttxt"
            android:layout_width="410dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_state"
            android:ems="10"
            android:hint="State"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cttxt" />

        <EditText
            android:id="@+id/cttxt"
            android:layout_width="410dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_city"
            android:ems="10"
            android:hint="City"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addtxt" />

        <EditText
            android:id="@+id/pntxt"
            android:layout_width="410dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_pin"
            android:ems="10"
            android:hint="Pin Code"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sttxt" />

        <EditText
            android:id="@+id/addtxt"
            android:layout_width="410dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_address"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Address"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gender" />

        <EditText
            android:id="@+id/cnfpwdtxt"
            android:layout_width="410dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_pass"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pwdtxt" />


        <TextView
            android:id="@+id/supdttxt"
            android:layout_width="222dp"
            android:layout_height="51dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/alfa_slab_one"
            android:text=""
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt" />

        <Button
            android:id="@+id/btnsigup"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/round_btn"
            android:text="Sign Up"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dobtxt" />

        <EditText
            android:id="@+id/dobtxt"
            android:layout_width="410dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:drawableRight="@drawable/ic_dob"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Select DOB"
            android:inputType="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pntxt" />

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyle"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:text="Already have account?"
            android:textColor="#551AD8"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnsigup" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="20dp"
            android:background="@color/cardview_shadow_end_color"
            android:text="Login!"
            android:textAllCaps="false"
            android:textColor="#551AD8"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/btnsigup" />

        <Spinner
            android:id="@+id/gender"
            android:layout_width="410dp"
            android:layout_height="55dp"
            android:layout_marginTop="28dp"
            android:drawableRight="@drawable/ic_gender"
            android:entries="@array/Gender"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cnfpwdtxt" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>